# example config file for IRC::Client.
# syntax is YAML, config is a hash.
--- 
# connection options
:host: server.com # this is required!
:retry_wait: 10 # how many seconds to wait before retrying after a disconnect
:port: 6667

# registration options
:nick: rubybot
:user: rubybot
:realname: ruby irc bot

# plugin options
# this will load all plugins in the specified path (not recursive!)
#:plugin_dir: 'path/to/plugins'

# add your own config options here, they will be available at runtime to 
# your plugins via @config.